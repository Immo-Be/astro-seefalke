---
interface Props {
  href: string;
  className?: string;
}
const {className, href} = Astro.props;
---

<a href={href} class=`link-class ${className}`> <slot /></a>

<style>
  .link-class {
    padding: 0.4em 0.8em;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2.5px;
    font-weight: 500;
    color: #fff;
    background-color: var(--clr-accent);
    border: none;
    border-radius: 5px;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    outline: none;
    font-family: var(--ff-base);
  }

  .link-class:hover {
    background-color: #fff;
    color: #000;
  }

  .link-class:active {
    transform: translateY(-1px);
  }
</style>
