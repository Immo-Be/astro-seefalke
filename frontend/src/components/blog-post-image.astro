---
import {Image} from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
}

const {src, width = 20, height = 18, ...attrs} = Astro.props;
---

{src.length > 0 && <Image src={src} {...attrs} height={height} width={width} />}

<style>
  :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>
